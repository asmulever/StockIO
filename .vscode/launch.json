{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Flask",
      "type": "debugpy",
      "request": "launch",
      "module": "flask",
      "cwd": "${workspaceFolder}/backend",      // ðŸ‘ˆ  mueve el CWD al back
      "env": {
        // si tu wsgi.py estÃ¡ en backend/wsgi.py:
        "FLASK_APP": "wsgi.py",                // archivo relativo a cwd
        // â€¦o usa mÃ³dulo: "FLASK_APP": "backend.wsgi"
        "FLASK_ENV": "development"
      },
      "args": ["run", "--port", "5000", "--debug"],
      "jinja": true
    },
    {
      "name": "Backend (Flask)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/backend/wsgi.py",
      "console": "integratedTerminal",
      "env": {
        "FLASK_APP": "wsgi.py",
        "FLASK_ENV": "development"
      },
      "args": ["run", "--port=5000", "--debug"],
      "jinja": true
    },
    {
      "name": "Frontend (React + Vite)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "cwd": "${workspaceFolder}/frontend",
      "console": "integratedTerminal"
    }
  ],
  "compounds": [
    {
      "name": "Launch Backend + Frontend",
      "configurations": ["Backend (Flask)", "Frontend (React + Vite)"]
    },
     {
      "name": "Launch Flask + Frontend",
      "configurations": ["Python: Flask", "Frontend (React + Vite)"]
    }
  ]
}
